require_relative '../lib/config'
import '../lib/all.rb'


task :default => [:dataset, WORD_FILE] do |t|
  sh %W(python main.py
        --num_classes 2
        --word_file #{t.sources[1]}
        --train_file '#{TRAIN_FILE}'
        --eval_file '#{EVAL_FILE}'
        --train_steps 200
        --eval_steps 50
        --batch_size 64
        --min_eval_frequency 10
  ).join(' ')
end
